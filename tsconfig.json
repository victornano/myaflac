{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@aflac/website/claims": ["libs/website/claims/src/index.ts"],
      "@aflac/website/policies": ["libs/website/policies/src/index.ts"],
      "@aflac/core/card": ["libs/core/card/src/index.ts"],
      "@aflac/core/storybook": ["libs/core/storybook/src/index.ts"],
      "@aflac/assets": ["libs/assets/src/index.ts"],
      "@aflac/core/notification-bar": [
        "libs/core/notification-bar/src/index.ts"
      ],
      "@aflac/core/icon": ["libs/core/icon/src/index.ts"],
      "@aflac/core/models": ["libs/core/models/src/index.ts"],
      "@aflac/core/header": ["libs/core/header/src/index.ts"],
      "@aflac/core/translate": ["libs/core/translate/src/index.ts"],
      "@aflac/core/select": ["libs/core/select/src/index.ts"],
      "@aflac/core/menu": ["libs/core/menu/src/index.ts"],
      "@aflac/core/tools": ["libs/core/tools/src/index.ts"],
      "@aflac/core/button": ["libs/core/button/src/index.ts"],
      "@aflac/core/alert-banner": ["libs/core/alert-banner/src/index.ts"],
      "@aflac/core/tabs": ["libs/core/tabs/src/index.ts"],
      "@aflac/core/step-bar": ["libs/core/step-bar/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
